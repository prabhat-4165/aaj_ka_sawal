// print inverted hollow triangle
#include <iostream>
using namespace std;

int main()
{
   int row;
   cin>>row;
   for(int i=1;i<=row;i++)
   {
      for(int j=1;j<i;j++)
      {
         cout<<" ";
      }
      for (int j=1;j<=(row*2 - (2*i-1));j++)
      {   
            
         if ( (i==1 || j==1 || j==(row*2 - (2*i-1))) && j%2==1 )
            cout<<"*";
            else 
              cout<<" ";
      }
      cout<<endl;
   }
}



// rotate the image of a matrix
class Solution {
public:
    void rotate(vector<vector<int>>& matrix) {
        vector<vector<int>>v;
        int row = matrix.size();
        int col = matrix[0].size();

        for (int i=0;i<row;i++)
        {   vector<int>temp;
            for(int j=0;j<col;j++)
            {
             temp.push_back(matrix[j][i]);
            }
            v.push_back(temp);
        }
          for (int j=0;j<row/2;j++){
              for(int i=0;i<col;i++){
                  swap(v[i][j],v[i][row-j-1]);
              }
          }  
          matrix = v;
    }
};
